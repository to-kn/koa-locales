{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist/esm",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "./dist/types",
		"allowSyntheticDefaultImports": true
	},
	"include": ["src"]
}
